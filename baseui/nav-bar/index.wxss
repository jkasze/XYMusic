/* components/nav-bar/index.wxss */
.nav-bar {
  display: flex;
  height: 44px;
  text-align: center;
}

.left .right {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
}

.left-slot:empty + .left-arrow {
  display: block;
}

.left-arrow {
  display: none;
}

.left .left-arrow .icon {
  width: 44rpx;
  display: block;
}

.center {
  flex: 1;
}

.center-title {
  display: none;
}

.center-slot:empty + .center-title {
  display: block;
}
